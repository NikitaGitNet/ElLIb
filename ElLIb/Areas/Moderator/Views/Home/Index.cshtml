@model IQueryable<Book>
@{
    string strTitle = "Панель модератора";
    ViewBag.Title = strTitle;
}
<div>
    <h2>@strTitle</h2>
    <div>
        <h3>Наши книги</h3>
        <div class="div-box">
            <a asp-area="Moderator" asp-controller="Books" asp-action="Edit" asp-route-id="">Добавить книгу</a>
        </div>
        @if (Model.Any())
        {
            <div>
                @foreach (Book entity in Model)
                {
                    <div>
                        <a asp-area="Moderator" asp-controller="Books" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Moderator" asp-controller="Books" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@entity.Id">
                            <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Удалить</a>
                        </form>
                        <a asp-area="" asp-controller="BooksShow" asp-action="Index" asp-route-id="@entity.Id">
                            @($"{entity.Title}")
                        </a>  
                    </div>
                }
                <a asp-area="Moderator" asp-controller="Home" asp-action="BookingShow">Показать брони</a>
            </div>
        }
    </div>
</div>
