@model IQueryable<Comment>

@if(Model?.Any() == true)
{
    <section>
        <h2>Комментарии пользователей:</h2>
        <ul class="div-box">
            @foreach (Comment comments in Model)
            { 
                <li>
                    <a asp-area="" asp-controller="Comment" asp-action="Index" asp-route-id="@comments.Id">
                    </a>
                    <h4>
                        @comments.UserEmail
                    </h4>
                    <p>
                        @Html.Raw(comments.Text)
                    </p>
                    <hr>
                </li>
            }
        </ul>
    </section>
}
